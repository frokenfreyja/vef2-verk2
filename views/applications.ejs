<%- include('header') -%>

<div class="main">
<h1> <%= title %> </h1>

<%if (rows == 0) { %>
  <p> Engar umsóknir </p>
<% } %>

<div class="row">
<% rows.forEach((row) => { %>
  <div class="col">
      <h2><%= row.name %></h2>
      <a href="mailto:<%= row.email %>"><%= row.email %></a>
      <p>Sími: <%= row.phone %></p>
      <p>Umsókn send: <%= row.created %></p>
    </div>
    <div class="col">
        <p class="presentation"><%= row.presentation %></p>
    </div>
    <div class="buttons">
      <form method="post" action="/applications/process/<%= row.id %>">
        <% if(row.processed == false) { %>
          <button class="button">Vinna umsókn</button>
        <% } %>
        <% if(row.processed == true) { %>
          <p> ✓ Umsókn unnin <%= row.updated %> </p>
        <% } %>
      </form>
      <form method="post" action="/applications/remove/<%= row.id %>">
        <button class="button">Eyða umsókn</button>
      </form>
  </div>
<% }) %>
</div>
</div>

<%- include('footer') -%>